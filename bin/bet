#!/usr/bin/env python
import sys

try:
    ranks = [int(x) for x in sys.argv[1:]]
    ranks_a = ranks[: len(ranks) // 2]
    ranks_b = ranks[len(ranks) // 2 :]
    rank_a = sum(ranks_a) / len(ranks_a)
    rank_b = sum(ranks_b) / len(ranks_b)
except:
    print("Usage: bet RANK_A RANK_B")
    exit(1)

proba_a = 1 / (1 + 10 ** ((rank_b - rank_a) / 400))
proba_b = 1 - proba_a

print("{} (Mean {}) against {} (Mean {})".format(ranks_a, rank_a, ranks_b, rank_b))

print()

print("{:2.2%} | {:2.2%}".format(proba_a, proba_b))

print("1:{:4.3} | 1:{:4.3}".format(1 / proba_a, 1 / proba_b))
